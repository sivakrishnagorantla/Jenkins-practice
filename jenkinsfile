pipeline {
    agent { node { label 'Agent-1' } }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }

    post{
        always{
            echo "I will run always wheather the job is sucess or not"
            }
        sucess{
            echo "I will run the job if it is sucess"
         }
        failure{
            echo "I will not run the job if it is a failure"
        }
    }
}
